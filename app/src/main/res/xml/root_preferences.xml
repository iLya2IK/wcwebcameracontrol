<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/account_header">

        <EditTextPreference
            app:key="PREF_HTTP_CFG_URL"
            app:title="@string/hostname_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="PREF_HTTP_CFG_U"
            app:title="@string/username_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:dialogMessage="Enter your password"
            app:dialogTitle="Password"
            app:key="PREF_HTTP_CFG_K"
            app:title="@string/password_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>